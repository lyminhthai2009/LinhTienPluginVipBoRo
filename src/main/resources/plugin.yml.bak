name: ${project.name}
version: ${project.version}
main: me.yogurt0811.linhtien.LinhTienPlugin
api-version: '1.20'
authors: [Yogurt0811]
description: ${project.description}
prefix: 'LinhTien'
depend: [MythicMobs] # THAY ĐỔI: Phụ thuộc cứng vào MythicMobs
softdepend: [PlaceholderAPI, ModelEngine] # THÊM SOFTDEPEND CHO MODELENGINE

commands:
  tuluyen:
    description: Bắt đầu hoặc dừng tu luyện.
    usage: /tuluyen
    permission: linhtien.command.tuluyen
  dotpha:
    description: Cố gắng đột phá cảnh giới.
    usage: /dotpha
    permission: linhtien.command.dotpha
  kynang:
    description: Mở giao diện kỹ năng.
    usage: /kynang
    aliases: [kn]
    permission: linhtien.command.kynang
  tongmon:
    description: Quản lý tông môn.
    usage: /tongmon <create|leave|...>
    aliases: [tm]
    permission: linhtien.command.tongmon
  linhtien:
    description: Hiển thị trợ giúp plugin.
    usage: /linhtien
    aliases: [lt]
    permission: linhtien.command.help 
  linhtienadmin:
    description: Lệnh quản trị chính.
    usage: /linhtienadmin <player|reload|skill|giveskillbook>
    aliases: [lta]
    permission: linhtien.admin

permissions:
  linhtien.*:
    description: Cấp tất cả quyền của plugin.
    children: [linhtien.admin, linhtien.player]
  linhtien.admin:
    description: Quyền quản trị (/lta).
    default: op
  linhtien.player:
    description: Quyền cơ bản cho người chơi.
    default: true
    children: [linhtien.command.help, linhtien.command.tuluyen, linhtien.command.dotpha, linhtien.command.kynang, linhtien.command.tongmon]
  linhtien.command.help: { default: true }
  linhtien.command.tuluyen: { default: true }
  linhtien.command.dotpha: { default: true }
  linhtien.command.kynang: { default: true }
  linhtien.command.tongmon: { default: true }